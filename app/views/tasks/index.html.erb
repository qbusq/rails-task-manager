<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <p><%= check_box_tag task, task.completed,  task.completed,completed: true %><%= link_to task[:title], task_path(task) %>
  <%= link_to(
        content_tag(
          :i,
          nil,
          class: 'fa fa-trash-o'
        ),
        method: :delete,
        data: {
          confirm: 'Are you sure?'
        }
      )
  %></p>
<% end %>

<%= link_to "Add a new task", tasks_new_path  %>

