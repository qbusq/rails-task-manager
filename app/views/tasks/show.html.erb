<h1><%= @task.title %></h1>
<%= link_to "Edit this task", task_edit_path  %>

<p>
  <%= label_tag do %>
    <%= check_box_tag @task, @task.completed, @task.completed,completed: true %>
    <% if @task.completed %>
      <%= "This task is completed" %>
    <% else %>
      <%= "This task is not completed yet" %>
    <% end %>
  <% end %>
</p>
<%= link_to "Back to list", tasks_path  %>


